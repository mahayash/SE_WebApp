<div class="container">
    <h1>Feedback Form</h1>
</div>
<div class="container">
    <div class="row">
        <div class="col-sm-8 col-md-6">
            {{#if feedbackSubmitted}}
            <h2>Thanks for the feedback</h2>
            {{else}}
            <form method="post">
                <input type="hidden" name="action" value="feedback">
                <div class="form-group {{#if validationErrors.name}}has-error{{/if}}">
                    <label>Name</label>
                    <input type="text" name="name.full" class="form-control" value="{{formData.[name.full]}}">
                </div>
                <div class="form-group {{#if validationErrors.phoneNumber}}has-error{{/if}}">
                    <label>Phone</label>
                    <input type="text" name="phoneNumber" class="form-control" value="{{formData.phoneNumber}}">
                </div>
                <div class="form-group {{#if validationErrors.message}}has-error{{/if}} ">
                    <label>Message</label>
                    <textarea name="message" placeholder="Leave us a message..." rows="4" class="form-control">{{formData.message}}</textarea>
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
            {{/if}}
        </div>
    </div>
</div>